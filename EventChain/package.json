{
  "name": "EventChain-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:security": "vitest run tests/eventchain-security.test.ts",
    "test:unit": "vitest run tests/eventchain.test.ts tests/organizer-functions-validation.test.ts",
    "test:all": "npm run test:unit && npm run test:security",
    "test:fuzz": "npx @stacks/rendezvous . eventchain invariant --runs=100",
    "test:comprehensive": "npm run test:all && npm run test:fuzz"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.8.1",
    "@stacks/connect": "^8.1.9",
    "@stacks/rendezvous": "^0.10.0",
    "@stacks/transactions": "^7.2.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "fast-check": "^4.3.0"
  }
}
